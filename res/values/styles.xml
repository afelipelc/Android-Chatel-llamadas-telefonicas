<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
	    <item name="android:windowBackground">@drawable/backgroundapp</item>
	    <item name="android:textColor">@color/ColorText</item>
    </style>


	<!-- Estilo para el dashboard -->
	<style name="ActionBarCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/actionbarbackground</item>
    </style>
    
	<style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2a3947</item>
        <item name="android:background">@drawable/buttonsbackgound</item>
    </style>
    
	<style name="BotonAzulVerde">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#e3e3e3</item>
        <item name="android:background">@drawable/botonverde</item>
    </style>
    
		<style name="BotonGenerico">
        <item name="android:textColor">#f2f2f2</item>
        <item name="android:background">@drawable/botongenerico</item>
        <item name="android:minHeight">36dip</item>
        
    </style>
	
	<style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dedede</item>
    </style>
    
    <style name="TituloLinea">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/ColorText</item>
    </style>
    
    <style name="TextosGenericos">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/ColorText</item>
    </style>
    
    <style name="TextosTab">
        <item name="android:textColor">@drawable/tab_text_color</item>
    </style>
    
    <color name="ColorEditText">#31404f</color>
    <color name="ColorText">#153554</color>
    
</resources>