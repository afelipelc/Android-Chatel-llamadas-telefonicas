<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.afelipe.chatel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mx.afelipe.chatel.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mx.afelipe.chatel.activities.LineasActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_lineas" >
        </activity>
        <activity
            android:name="mx.afelipe.chatel.activities.ContadorLineaActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_contador_linea" >
        </activity>
        <activity
            android:name="mx.afelipe.chatel.activities.TarifasActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_tarifas" >
        </activity>
        <activity
            android:name="mx.afelipe.chatel.activities.RegistrosHoyActivity"
            android:label="@string/title_activity_reportes" >
        </activity>
        <activity
            android:name="mx.afelipe.chatel.activities.ReportesActivity"
            android:label="@string/title_activity_reportes" >
        </activity>
    </application>

</manifest>